# ============================================
# RestaurantOS Environment Variables
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control
# ============================================

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string from Supabase or other provider
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://user:password@host:5432/database"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
# Full URL of your application (including protocol)
# Development: http://localhost:3000
# Production: https://yourdomain.com
NEXTAUTH_URL="http://localhost:3000"

# Secret key for encrypting session tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here-generate-a-random-string"

# ============================================
# FILE STORAGE (Optional - for Cloudinary later)
# ============================================
# Cloudinary cloud name (optional, for future use)
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# Cloudinary API key (optional, for future use)
# CLOUDINARY_API_KEY="your-api-key"

# Cloudinary API secret (optional, for future use)
# CLOUDINARY_API_SECRET="your-api-secret"

# ============================================
# PAYMENT GATEWAYS
# ============================================

# --- Stripe ---
# Stripe publishable key (safe to expose in browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxx"

# Stripe secret key (server-side only)
STRIPE_SECRET_KEY="sk_test_xxx"

# Stripe webhook signing secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# --- PayPal ---
# PayPal client ID (safe to expose in browser)
NEXT_PUBLIC_PAYPAL_CLIENT_ID="xxx"

# PayPal client secret (server-side only)
PAYPAL_CLIENT_SECRET="xxx"

# ============================================
# AI / ANTHROPIC (Claude)
# ============================================
# Anthropic API key for Claude AI features (demand forecasting, chatbot, etc.)
ANTHROPIC_API_KEY="sk-ant-xxx"

# ============================================
# NOTIFICATIONS
# ============================================

# --- Twilio (SMS) ---
# Twilio Account SID
TWILIO_ACCOUNT_SID="ACxxx"

# Twilio Auth Token
TWILIO_AUTH_TOKEN="xxx"

# Twilio phone number (format: +1234567890)
TWILIO_PHONE_NUMBER="+1234567890"

# --- SendGrid (Email) ---
# SendGrid API key
SENDGRID_API_KEY="SG.xxx"

# Email address to send from (must be verified in SendGrid)
SENDGRID_FROM_EMAIL="noreply@restaurant.com"

# ============================================
# GOOGLE MAPS
# ============================================
# Google Maps API key (for address autocomplete, delivery tracking)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIzaxxx"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Application name (displayed in UI, customizable for white-label)
NEXT_PUBLIC_APP_NAME="RestaurantOS"

# Full application URL (used for generating links, QR codes, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ============================================
# OPTIONAL: ADDITIONAL SERVICES
# ============================================

# Google Analytics (optional)
# NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Sentry Error Tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN="https://xxx@sentry.io/xxx"

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Set to true to enable debug logging (never use in production)
# DEBUG_MODE="false"